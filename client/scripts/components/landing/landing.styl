.landingWrap
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 100%
  height 100%
  background-color transparent
  .content
    position relative
    width auto
    height auto
    text-align center
    margin-bottom 80px
    .header
      margin 0
      font-family $open-sans
      color $light-white-9
      font-size 48px
      font-weight 300
      letter-spacing 7px
    .divider
      margin 20px 0 0 0
      width 600px
      height 1px
      background-color $light-white-3
    .subheader
      color $light-white-7
      font-size 16px
    .line
      position absolute
      margin auto
      left 0
      right 9px
      width 1px
      height 75px
      background-color $light-white-4
      transition: all .2s linear
      &.grow
        height 85px
    .circle
      position absolute
      margin auto
      margin-top 75px
      left 0
      right 10px
      width 50px
      height 50px
      background-color transparent
      border 1px solid $light-white-4
      border-radius 50px
      cursor pointer
      transition all .2s linear
      &.hovered
        transform translateY(10px)